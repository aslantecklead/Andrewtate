<Window x:Class="Andrewtate.Windows.Auth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Andrewtate.Windows"
        mc:Ignorable="d"
        Title="Auth" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="tbLogin" FontSize="15" HorizontalAlignment="Center" Margin="0,104,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="294" Height="45"/>
        <TextBox x:Name="tbPassword" FontSize="15" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="294" Height="45"/>
        <Button x:Name="btnEnter" Content="Вход" HorizontalAlignment="Center" Margin="0,285,0,0" VerticalAlignment="Top" Height="40" Width="206" Click="btnEnter_Click"/>
        <Label Content="Login" HorizontalAlignment="Center" Margin="0,78,0,0" VerticalAlignment="Top" Width="294"/>
        <Label Content="Password" HorizontalAlignment="Center" Margin="0,169,0,0" VerticalAlignment="Top" Width="294"/>

    </Grid>
</Window>
